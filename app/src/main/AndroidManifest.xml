<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urbantamil.projmadurai">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/minmadurai_nodroid"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GenreListActivity"
            android:label="Genre list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AuthorListActivity"
            android:label="Author list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LastReadListActivity"
            android:label="@string/title_book_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookListActivity"
            android:label="@string/title_book_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookDetailActivity"
            android:label="@string/title_book_detail"
            android:parentActivityName=".BookListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.urbantamil.projmadurai.BookListActivity" />
        </activity>
        <activity
            android:name=".MaduraiGalleryActivity"
            android:label="@string/title_activity_madurai_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaduraiSearch"
            android:label="@string/title_activity_madurai_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaduraiSettingsActivity"
            android:label="@string/title_activity_madurai_settings" />
        <activity
            android:name=".MaduraiOptionsActivity"
            android:label="@string/title_activity_madurai_settings" />
        <activity
            android:name=".MaduraiRecentbookActivity"
            android:label="@string/projmad_recentbooks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaduraiBookmarkActivity"
            android:label="@string/projmad_bookmarks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.urbantamil.chithirai.SeyalListActivity"
            android:label="@string/title_min_madurai"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.urbantamil.chithirai.SeyalDetailActivity"
            android:label="@string/title_min_madurai_detail"
            android:parentActivityName="com.urbantamil.chithirai.SeyalListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.urbantamil.chithirai.SeyalListActivity" />
        </activity>
        <activity
            android:name=".MaduraiCreditsActivity"
            android:label="@string/title_activity_madurai_credits"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
